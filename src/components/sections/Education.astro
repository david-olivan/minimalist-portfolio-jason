---
import Section from "@components/Section.astro";

import { education } from "cv_en.json";

const { title } = Astro.props
---

<Section title={title || "Formación"}>
    <ul>
        {
            education.map(({ institution, area, studyType, courses, description }) => (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{ studyType } { area }</h3>
                                <h4>{ institution }</h4>
                            </div>                            
                        </header>
                        
                        <footer>
                            <p>{ description }</p>
                            {/*
                            <p>Módulos de estudio destacados:</p>
                            <ul>
                                {
                                    courses.map((course) => (
                                        <li>
                                            <span>{course}</span>
                                        </li>                                        
                                    ))
                                }
                            </ul>
                            */}
                        </footer>
                    </article>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
    }

    footer ul {
        display: inline-flex;
        flex-direction: row;
        gap: 8px;
        flex-wrap: wrap;

        li {
            border-radius: 6px;
            background: var(--color-pildora);
            color: black;
            font-size: 0.8rem;
            font-weight: 500;
            padding: 0.2rem 0.6rem;
        }
    }  
</style>
