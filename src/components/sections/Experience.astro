---
import Section from "@components/Section.astro";

import { work } from  "cv_en.json"

const { title } = Astro.props
---

<Section title={title || "Experiencia laboral"}>
    <ul>
        {work.map(({ name, startDate, endDate, position, summary, highlights }) => {
            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
            const years = startYear != endYear ? `${startYear} - ${endYear}` : `${startYear}`

            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>
                                <h4>{position}</h4>
                            </div>
                            
                            <time>{years}</time>
                        </header>

                        <footer>
                            <p>{summary}</p>
                            <ul>
                                {
                                    highlights.map((highlight) => (
                                        <li>
                                            <span>{highlight}</span>
                                        </li>
                                    ))                                    
                                }
                            </ul>
                        </footer>
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;
    }

    footer ul {
        display: inline-flex;
        flex-direction: row;
        gap: 8px;
        flex-wrap: wrap;

        li {
            border-radius: 6px;
            background: var(--color-pildora);
            color: black;
            font-size: 0.8rem;
            font-weight: 500;
            padding: 0.2rem 0.6rem;
        }
    }    
</style>
